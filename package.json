{
  "name": "sarefinport-server",
  "version": "1.0.0",
  "description": "Portfolio Backend API Server",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "nodemon --exec bun dist/index.js",
    "dev": "nodemon --exec bun run src/index.ts",
    "build": "bun run tsc",
    "lint": "bunx eslint .",
    "lint:fix": "bunx eslint . --fix",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "db:status": "prisma migrate status",
    "db:introspect": "prisma introspect",
    "db:seed": "prisma db seed",
    "db:setup": "bun run db:generate && bun run db:push && bun run db:migrate && bun run db:seed",
    "db:sync": "bun run db:pull && bun run db:generate",
    "db:refresh": "bun run db:reset && bun run db:seed"
  },
  "dependencies": {
    "@prisma/client": "^5.6.0",
    "bcryptjs": "^2.4.3",
    "commonjs": "^0.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^24.5.2",
    "nodemon": "^3.1.10",
    "prisma": "^5.6.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
