{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node", // Explicitly set for Node.js resolution
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true, // Needed for default imports like dotenv
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "api/**/*"], // Include all relevant source files
  "exclude": ["node_modules", "dist"]
}
